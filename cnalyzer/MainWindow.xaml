<Window x:Class="cnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cnalyzer"
        mc:Ignorable="d"
        Title="Crypto AI Analyzer" Height="600" Width="900" 
        Background="#121212" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Analysis Parameters" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Crypto Symbol (e.g. BTC/USDT)" Foreground="#888" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtSymbol" Style="{StaticResource ModernTextBox}" Text="BTC/USDT"/>

            <TextBlock Text="Timeframe" Foreground="#888" Margin="0,15,0,5"/>
            <ComboBox x:Name="ComboTimeframe" SelectedIndex="2" Background="#1E1E1E" Foreground="Black">
                <ComboBoxItem Content="15m"/>
                <ComboBoxItem Content="1h"/>
                <ComboBoxItem Content="4h"/>
                <ComboBoxItem Content="1d"/>
            </ComboBox>

            <TextBlock Text="Current RSI Value" Foreground="#888" Margin="0,15,0,5"/>
            <TextBox x:Name="TxtRsi" Style="{StaticResource ModernTextBox}" Text="50"/>

            <CheckBox x:Name="ChkFundamentals" Content="Include Fundamental News" Foreground="White" Margin="0,20,0,0" IsChecked="True"/>

            <Button x:Name="BtnAnalyze" Content="RUN AI ANALYSIS" Margin="0,30,0,0" Height="45" 
                    Background="#3D5AFE" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="BtnAnalyze_Click"/>
        </StackPanel>

        <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="10" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Analysis Results" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Separator Background="#333" Margin="0,0,0,20"/>

                    <TextBlock x:Name="TxtStatus" Text="Ready to analyze..." Foreground="#888" FontSize="14" FontStyle="Italic"/>

                    <StackPanel x:Name="ResultPanel" Visibility="Collapsed">
                        <TextBlock Text="Recommendation:" Foreground="#888" Margin="0,10,0,0"/>
                        <TextBlock x:Name="TxtRecommendation" Text="BUY" FontSize="28" FontWeight="Bold" Foreground="#4CAF50"/>

                        <TextBlock Text="Confidence Level:" Foreground="#888" Margin="0,15,0,0"/>
                        <ProgressBar x:Name="ProgressConfidence" Height="10" Maximum="100" Value="85" Foreground="#3D5AFE" Background="#333" BorderThickness="0" Margin="0,5,0,0"/>
                        <TextBlock x:Name="TxtConfidence" Text="85%" Foreground="White" HorizontalAlignment="Right" Margin="0,2,0,0"/>

                        <TextBlock Text="AI Reasoning:" Foreground="#888" Margin="0,15,0,5"/>
                        <TextBlock x:Name="TxtReasoning" Text="..." Foreground="White" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>